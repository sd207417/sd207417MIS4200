@model IEnumerable<sd207417MIS4200.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Here is the list of existing courses.</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Instructor.instructorFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.courseSection)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.courseDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.courseOnline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.courseTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Instructor.instructorFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.courseSection)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.courseDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.courseOnline)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.courseTime)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.courseID }, new { @class="glyphicon glyphicon-pencil"}) |
            @Html.ActionLink("Details", "Details", new { id=item.courseID }) |
            @Html.ActionLink(" ", "Delete", new { id=item.courseID }, new { @class = "glyphicon glyphicon-trash" })
        </td>
    </tr>
}

</table>
